
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Manşet</label>
        <input type="text" name="Header1" value="" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Alt Başlık</label>
        <input type="text" name="Header2" value="" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">İçerik</label>
        <input type="text" name="Content" value="" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Oluşturulan Tarih</label>
        <input type="date" name="CreateDate" value="" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Güncelleme Tarihi</label>
        <input type="date" name="UpdateDate" value="" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Resim</label>
        <input type="file" name="ImageUpload" class="form-control"/>
        
    </div>
    <div class="mb-3">
        <label class="form-label">Kategoriler</label>
       
         <select name="CategoryId"  class="form-control"  asp-items="ViewBag.CategoryList"></select>
    </div>
   <input type="submit" class="btn btn-primary" value="Kaydet" />

</form>

